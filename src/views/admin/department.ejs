<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Phòng ban | Bệnh viện VinMec</title>
    <!-- favicon -->
    <link
      rel="icon"
      type="image/x-icon"
      href="/assets/icon/android-icon-192x192.webp" />

    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jquery -->
    <script
      src="https://code.jquery.com/jquery-3.7.1.js"
      integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
      crossorigin="anonymous"></script>
    <!-- icon -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet" />
    <!-- css -->
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/category.css" />
    <!-- JavaScript  -->
    <script src="/admin/js/main.js" defer></script>
  </head>
  <body>
    <%- include("./layout/spinner.ejs") %>
    <div class="row">
      <%- include("./layout/sidebar.ejs") %>
      <div class="colum-content">
        <%- include("./layout/header.ejs") %>
        <div class="colum-title">
          <p>Phòng ban</p>
        </div>
        <div class="btn-add">
          <button
            id="tao"
            type="button"
            class="rounded-2"
            data-bs-toggle="modal"
            data-bs-target="#myModal">
            Tạo
          </button>
          <div class="table-list">
            <table class="table-danh-muc table table-hover">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>ID</th>
                  <th>Tên phòng ban</th>
                  <th style="width: 45%">Mô tả</th>
                  <th>Hành động</th>
                </tr>
              </thead>
              <tbody>
                <% listdepartment.forEach(function(department, index) { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= department.id %></td>
                  <td><%= department.name %></td>
                  <td><%= department.description %></td>
                  <td>
                    <button
                      class="btn btn-warning"
                      data-bs-toggle="modal"
                      data-bs-target="#modalEdit"
                      onclick="openEditModal('<%= department.id %>', '<%= department.name %>', '<%= department.description %>')">
                      Sửa
                    </button>
                    <button
                      class="btn btn-danger xoa"
                      data-id="<%= department.id %>">
                      Xóa
                    </button>
                  </td>
                </tr>
                <%});%>
              </tbody>
            </table>
            <%- include("./layout/pagination") %>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="myModal"
      tabindex="-1"
      data-bs-backdrop="static"
      data-bs-keyboard="false">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div
            class="modal-header d-flex justify-content-center position-relative">
            <h4>Tạo Phòng Ban</h4>
            <button
              type="button"
              class="btn-close position-absolute end-0 me-3"
              data-bs-dismiss="modal"></button>
          </div>
          <form action="/admin/create-department" method="POST">
            <div class="modal-body">
              <div class="mb-3 mt-3">
                <p>Tên phòng ban:</p>
                <input
                  type="text"
                  id="name"
                  class="form-control"
                  placeholder="Tên phòng ban"
                  name="name"
                  required />
              </div>
              <p class="mt-3">Mô tả</p>
              <textarea
                rows="4"
                id="des"
                class="form-control"
                id="des"
                placeholder="Mô tả"
                name="des"
                required></textarea>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-danger"
                data-bs-dismiss="modal">
                Hủy
              </button>
              <button type="submit" class="btn btn-info">Tạo</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
