<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh mục | Bệnh viện Vinmec</title>

    <!-- favicon -->
    <link
      rel="icon"
      type="image/x-icon"
      href="/assets/icon/android-icon-192x192.webp" />

    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- icon -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet" />
    <!-- css -->
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/category.css" />
    <!-- JavaScript  -->
    <script src="/admin/js/main.js" defer></script>
  </head>

  <body>
    <div class="row">
      <%- include("./layout/sidebar.ejs") %>
      <div class="colum-content">
        <%- include("./layout/header.ejs") %>
        <div class="colum-title">
          <p>Danh mục</p>
        </div>
        <div class="btn-add">
          <button
            id="tao"
            type="button"
            class="rounded-2"
            data-bs-toggle="modal"
            data-bs-target="#myModal">
            Tạo
          </button>
          <div
            class="modal fade"
            id="myModal"
            tabindex="-1"
            data-bs-backdrop="static"
            data-bs-keyboard="false">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div
                  class="modal-header d-flex justify-content-center position-relative">
                  <h4>Tạo Danh Mục</h4>
                  <button
                    type="button"
                    class="btn-close position-absolute end-0 me-3"
                    data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/create-category" method="POST">
                  <div class="modal-body">
                    <div class="mb-3 mt-3">
                      <p>Tên danh mục:</p>
                      <input
                        type="text"
                        id="name"
                        class="form-control"
                        placeholder="Tên danh mục"
                        name="name"
                        required />
                    </div>
                    <p class="mt-3">Mô tả</p>
                    <textarea
                      rows="4"
                      id="des"
                      class="form-control"
                      id="des"
                      placeholder="Mô tả"
                      name="des"
                      required></textarea>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-danger"
                      data-bs-dismiss="modal">
                      Hủy
                    </button>
                    <button type="submit" class="btn btn-info">Tạo</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="table-list">
          <table class="table-danh-muc table table-hover">
            <thead>
              <tr>
                <th>STT</th>
                <th>ID</th>
                <th>Tên danh mục</th>
                <th style="width: 45%">Mô tả</th>
                <th>Hành động</th>
              </tr>
            </thead>

            <tbody>
              <% listcategori.forEach(function(category, index) { %>
              <%#if(category.name == "a") { %> <%# (!"searchInput" ||
              category.name.includes("a")) { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td>
                  <button class="btn btn-warning">Sửa</button>
                  <button
                    class="btn btn-danger xoa"
                    data-id="<%= category.id %>">
                    Xóa
                  </button>

                  <div
                    id="confirmDelete-<%= category.id %>"
                    class="popover-content d-none">
                    <div class="popover-heading">
                      <i
                        style="
                          color: orange;
                          font-size: 20px;
                          margin-right: 5px;
                        "
                        class="bx bxs-error bx-flashing"></i>
                      <span>Bạn có muốn xóa không?</span>
                    </div>
                    <div class="popover-body">
                      <button class="btn btn-outline-primary btn-sm cancel">
                        Hủy
                      </button>
                      <form
                        action="/admin/delete-category"
                        method="POST"
                        style="display: inline">
                        <input
                          type="hidden"
                          name="id"
                          value="<%= category.id %>" />
                        <button
                          type="submit"
                          class="btn btn-outline-danger btn-sm">
                          Có
                        </button>
                      </form>
                    </div>
                  </div>
                </td>
              </tr>
              <%# } %> <%}); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
